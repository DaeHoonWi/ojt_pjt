<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Review">
		
	<insert id="insertReview" parameterType="com.edsk.movie.dto.ReviewDTO">
		INSERT INTO REVIEW( R_NUM, C_NUM, M_ID, R_TITLE, R_CONTENT, R_DATE, R_COUNT, R_LIKE, R_PATH )
		VALUES( REVIEW_SEQ.NEXTVAL, #{c_num}, #{m_id}, #{r_title}, #{r_content}, SYSDATE, 0, 0, #{r_path} )
	</insert>
	
	<select id="selectReview" parameterType="java.lang.String" resultType="com.edsk.movie.dto.ReviewDTO">
		SELECT * 
		FROM REVIEW
		WHERE R_NUM=#{r_num}
	</select>
	
	<select id="selectReviewList" resultType="com.edsk.movie.dto.ReviewDTO">
		SELECT * 
		FROM REVIEW
	</select>
	
	<update id="updateReview" parameterType="com.edsk.movie.dto.ReviewDTO">
		UPDATE REVIEW 
			SET R_TITLE=#{r_title}, R_CONTENT=#{r_content}, R_PATH=#{r_path}
		WHERE R_NUM=#{r_num}
	</update>
	
	<delete id="deleteReview" parameterType="java.lang.Integer">
		DELETE REVIEW
		WHERE C_NUM=#{c_num}	
	</delete>
	
	
	<!-- review like관련 -->
	<insert id="insertReviewLike" parameterType="com.edsk.movie.dto.ReviewLikeDTO">
		INSERT INTO REVIEW_LIKE(R_NUM, M_ID, RL_DATE)
		VALUES( #{r_num}, #{m_id}, SYSDATE )
	</insert>
	
<!-- 	<update id="updateReviewLike" parameterType="java.lang.">
		
	</update> -->
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
</mapper>